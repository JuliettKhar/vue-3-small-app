{
  "name": "vue-3-demo",
  "private": false,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "yarn jest",
    "dev": "yarn webpack-dev-server",
    "build": "yarn webpack --mode production",
    "lint": "eslint --config .eslintrc.js --ignore-path .eslintignore .",
    "prettier-format": "prettier 'src/**/*.{ts,vue'} --config prettier.config.js --write",
    "postinstall": "husky install"
  },
  "module": "main",
  "devDependencies": {
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.0",
    "@types/highlight.js": "^9.12.3",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.150",
    "@types/marked": "^0.7.4",
    "@types/moment": "^2.13.0",
    "@vue/compiler-sfc": "^3.0.0-beta.4",
    "@vue/test-utils": "^2.0.0-alpha.6",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.2.6",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.5.3",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.3.1",
    "flush-promises": "^1.0.2",
    "husky": "^5.0.9",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.2.7",
    "lint-staged": "^10.5.4",
    "pinst": "^2.1.4",
    "prettier": "2.2.1",
    "raw-loader": "^4.0.1",
    "style-loader": "^1.2.1",
    "ts-jest": "^25.3.1",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "vue-jest": "^5.0.0-alpha.0",
    "vue-loader": "^16.0.0-alpha.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "highlight.js": "^10.0.2",
    "lodash": "^4.17.15",
    "marked": "^1.0.0",
    "moment": "^2.24.0",
    "vue": "^3.0.2",
    "vue-router": "^4.0.0-alpha.13"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run prettier-format && yarn run lint",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js,vue,ts}": [
      "lint",
      "git add"
    ],
    "*.js": "eslint"
  }
}
